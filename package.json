{
  "name": "user-event",
  "version": "0.0.0-development",
  "description": "Simulate user events for react-testing-library",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "npm t -- --coverage",
    "build": "babel src -d dist",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "cm": "npx git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gpx/user-event.git"
  },
  "author": "Giorgio Polvara <polvara@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gpx/user-event/issues"
  },
  "homepage": "https://github.com/Gpx/user-event#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "23.6.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "husky": "1.0.0-rc.14",
    "jest": "23.6.0",
    "jest-dom": "1.12.1",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-testing-library": "5.1.0",
    "regenerator-runtime": "0.12.1",
    "semantic-release": "^15.9.16",
    "travis-deploy-once": "^5.0.8"
  },
  "dependencies": {
    "dom-testing-library": "3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --write --parser markdown",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json",
      "node_modules/**",
      "dist/**"
    ]
  }
}
